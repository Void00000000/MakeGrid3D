<Window
    x:Class="MakeGrid3D.GraphicsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:glWpfControl="clr-namespace:OpenTK.Wpf;assembly=GLWpfControl"
    xmlns:local="clr-namespace:MakeGrid3D"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="MakeGrid3D"
    Width="1280"
    Height="720"
    Closing="Window_Closing"
    Icon="Images/icon.ico"
    KeyDown="KeyDownHandler"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Click="CreateNewGridClick" Header="Новая сетка" />
            <MenuItem Click="OpenFileClick" Header="Открыть" />
            <MenuItem Click="SaveFileClick" Header="Сохранить" />
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <glWpfControl:GLWpfControl
                x:Name="OpenTkControl"
                Grid.ColumnSpan="3"
                CanInvokeOnHandledEvents="False"
                Loaded="OpenTkControl_OnLoad"
                MouseLeftButtonUp="OpenTkControl_MouseLeftButtonUp"
                MouseMove="OpenTkControl_MouseMove"
                MouseRightButtonUp="OpenTkControl_MouseRightButtonUp"
                MouseWheel="OpenTkControl_MouseWheel"
                RegisterToEventsDirectly="False"
                Render="OpenTkControl_OnRender"
                SizeChanged="OpenTkControl_Resize" />

            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Instrument Panel  -->
                <TabControl
                    Name="Panel"
                    Grid.RowSpan="4"
                    Grid.Column="3"
                    Background="WhiteSmoke">
                    <TabItem Header="Просмотр">
                        <Grid Margin="10,10,10,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Speed move slider  -->
                            <Grid Grid.Row="0" Margin="10,10,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    FontSize="14"
                                    Foreground="Black"
                                    Text="Скорость движения: " />
                                <Slider
                                    Name="SpeedMoveSlider"
                                    Grid.Column="1"
                                    Maximum="5"
                                    Minimum="0"
                                    ValueChanged="SpeedMoveChanged" />
                            </Grid>
                            <!--  Speed zoom slider  -->
                            <Grid Grid.Row="1" Margin="10,10,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    FontSize="14"
                                    Foreground="Black"
                                    Text="Скорость зума:          " />
                                <Slider
                                    Name="SpeedZoomSlider"
                                    Grid.Column="1"
                                    Maximum="0.1"
                                    Minimum="0.001"
                                    ValueChanged="SpeedZoomChanged" />
                            </Grid>
                            <!--  Move buttons  -->
                            <Grid Grid.Row="2" Margin="10,10,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <RepeatButton
                                    Grid.Column="0"
                                    Width="40"
                                    Height="40"
                                    Background="Transparent"
                                    BorderThickness="1"
                                    Click="MoveLeftClick">
                                    <Image Source="Images/arrow_left.png" />
                                </RepeatButton>
                                <RepeatButton
                                    Grid.Column="1"
                                    Width="40"
                                    Height="40"
                                    Background="Transparent"
                                    BorderThickness="1"
                                    Click="MoveRightClick">
                                    <Image Source="Images/arrow_right.png" />
                                </RepeatButton>
                                <RepeatButton
                                    Grid.Column="2"
                                    Width="40"
                                    Height="40"
                                    Background="Transparent"
                                    BorderThickness="1"
                                    Click="MoveDownClick">
                                    <Image Source="Images/arrow_down.png" />
                                </RepeatButton>
                                <RepeatButton
                                    Grid.Column="3"
                                    Width="40"
                                    Height="40"
                                    Background="Transparent"
                                    BorderThickness="1"
                                    Click="MoveUpClick">
                                    <Image Source="Images/arrow_up.png" />
                                </RepeatButton>
                                <RepeatButton
                                    Grid.Column="4"
                                    Width="40"
                                    Height="40"
                                    Background="Transparent"
                                    BorderThickness="1"
                                    Click="ZoomInClick">
                                    <Image Source="Images/zoom_in.png" />
                                </RepeatButton>
                                <RepeatButton
                                    Grid.Column="5"
                                    Width="40"
                                    Height="40"
                                    Background="Transparent"
                                    BorderThickness="1"
                                    Click="ZoomOutClick">
                                    <Image Source="Images/zoom_out.png" />
                                </RepeatButton>
                            </Grid>

                            <!--  Rotating  -->
                            <Grid Grid.Row="3" Margin="10,10,10,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        FontSize="14"
                                        Foreground="Black"
                                        Text="Скорость вращения: " />
                                    <Slider
                                        Name="SpeedRotateSlider"
                                        Grid.Column="1"
                                        Maximum="45"
                                        Minimum="1"
                                        ValueChanged="SpeedRotateChanged" />
                                </Grid>

                                <Grid Grid.Row="1" Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <RepeatButton
                                        Grid.Column="0"
                                        Width="40"
                                        Height="40"
                                        Background="Transparent"
                                        BorderThickness="1"
                                        Click="RollLeftClick">
                                        <Image Source="Images/rotate_left.png" />
                                    </RepeatButton>
                                    <RepeatButton
                                        Grid.Column="1"
                                        Width="40"
                                        Height="40"
                                        Background="Transparent"
                                        BorderThickness="1"
                                        Click="RollRightClick">
                                        <Image Source="Images/rotate_right.png" />
                                    </RepeatButton>
                                    <RepeatButton
                                        Grid.Column="2"
                                        Width="40"
                                        Height="40"
                                        Background="Transparent"
                                        BorderThickness="1"
                                        Click="YawLeftClick">
                                        <Image Source="Images/rotate_around_left.png" />
                                    </RepeatButton>
                                    <RepeatButton
                                        Grid.Column="3"
                                        Width="40"
                                        Height="40"
                                        Background="Transparent"
                                        BorderThickness="1"
                                        Click="YawRightClick">
                                        <Image Source="Images/rotate_around_right.png" />
                                    </RepeatButton>
                                    <RepeatButton
                                        Grid.Column="4"
                                        Width="40"
                                        Height="40"
                                        Background="Transparent"
                                        BorderThickness="1"
                                        Click="PitchTopClick">
                                        <Image Source="Images/rotate_top.png" />
                                    </RepeatButton>
                                    <RepeatButton
                                        Grid.Column="5"
                                        Width="40"
                                        Height="40"
                                        Background="Transparent"
                                        BorderThickness="1"
                                        Click="PitchBottomClick">
                                        <Image Source="Images/rotate_bottom.png" />
                                    </RepeatButton>
                                </Grid>
                            </Grid>
                            <!--  Separator: Rotating|Replication  -->
                            <Separator
                                Grid.Row="4"
                                Margin="10,10,10,0"
                                Background="Black">
                                <Separator.RenderTransform>
                                    <ScaleTransform ScaleY="2.5" />
                                </Separator.RenderTransform>
                            </Separator>
                            <!--  Replicate cross section  -->
                            <StackPanel
                                Grid.Row="5"
                                Margin="10,10,10,0"
                                Orientation="Horizontal">
                                <TextBlock Margin="0,5,5,0" Text="z0: " />
                                <TextBox
                                    Name="Z0Block"
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0" />
                                <TextBlock Margin="0,5,5,0" Text="zn: " />
                                <TextBox
                                    Name="ZnBlock"
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0" />
                                <TextBlock Margin="0,5,5,0" Text="nz: " />
                                <TextBox
                                    Name="NZBlock"
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0" />
                                <TextBlock Margin="0,5,5,0" Text="qz: " />
                                <TextBox
                                    Name="QZBlock"
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0" />
                                <Button
                                    Width="65"
                                    Height="20"
                                    Margin="10,3,0,0"
                                    HorizontalAlignment="Right"
                                    Click="ReplicateCrossSectionsClick"
                                    Content="-&gt; 3D" />
                            </StackPanel>
                            <!--  Separator: Replication|CrossSections  -->
                            <Separator
                                Grid.Row="6"
                                Margin="10,10,10,0"
                                Background="Black">
                                <Separator.RenderTransform>
                                    <ScaleTransform ScaleY="2.5" />
                                </Separator.RenderTransform>
                            </Separator>
                            <!--  Cross section  -->
                            <Grid Grid.Row="7" Margin="10,10,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    FontSize="14"
                                    Foreground="Black"
                                    Text="Плоскость сечения: " />
                                <ComboBox
                                    Name="PlaneDropDownMenu"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    SelectionChanged="PlaneChanged">
                                    <ComboBoxItem Content="XY" />
                                    <ComboBoxItem Content="XZ" />
                                    <ComboBoxItem Content="YZ" />
                                </ComboBox>
                                <RepeatButton
                                    Grid.Column="2"
                                    Width="20"
                                    Height="20"
                                    Background="Transparent"
                                    BorderThickness="1"
                                    Click="PrevPlaneCLick">
                                    <Image Source="Images/tri_left.png" />
                                </RepeatButton>
                                <RepeatButton
                                    Grid.Column="3"
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0"
                                    Background="Transparent"
                                    BorderThickness="1"
                                    Click="NextPlaneCLick">
                                    <Image Source="Images/tri_right.png" />
                                </RepeatButton>
                                <TextBlock
                                    Name="CurrentPlaneBlock"
                                    Grid.Column="4"
                                    Margin="0,2,0,0" />
                                <TextBlock
                                    Name="CurrentPlaneSecBlock"
                                    Grid.Column="5"
                                    Margin="0,2,0,0" />
                            </Grid>
                            <Button
                                Grid.Row="8"
                                Margin="10,10,10,0"
                                HorizontalAlignment="Left"
                                Click="Return3DClick"
                                Content="Вернуться в 3D" />
                            <Button
                                Grid.Row="8"
                                Margin="10,10,10,0"
                                HorizontalAlignment="Right"
                                Click="DrawCrossSectionClick"
                                Content="Построить сечение" />
                            <!--  Separator: CrossSection|Elem Selector  -->
                            <Separator
                                Grid.Row="9"
                                Margin="10,10,10,0"
                                Background="Black">
                                <Separator.RenderTransform>
                                    <ScaleTransform ScaleY="2.5" />
                                </Separator.RenderTransform>
                            </Separator>
                            <!--  Elem Selector  -->
                            <Grid Grid.Row="10" Margin="10,10,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Name="ElemNumBlock"
                                    Grid.Column="0"
                                    Margin="0,0,5,0"
                                    FontSize="14"
                                    Foreground="Black"
                                    Text="№ элемента: |" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    FontSize="14"
                                    Foreground="Black"
                                    Text="Шаг: " />
                                <TextBox
                                    Name="StepSelectorInput"
                                    Grid.Column="2"
                                    Width="25"
                                    Margin="0,0,5,0"
                                    Text="1" />
                                <RepeatButton
                                    Grid.Column="3"
                                    Width="20"
                                    Height="20"
                                    Background="Transparent"
                                    BorderThickness="1"
                                    Click="PrevElemCLick">
                                    <Image Source="Images/tri_left.png" />
                                </RepeatButton>
                                <RepeatButton
                                    Grid.Column="4"
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,5,0"
                                    Background="Transparent"
                                    BorderThickness="1"
                                    Click="NextElemCLick">
                                    <Image Source="Images/tri_right.png" />
                                </RepeatButton>
                                <Button
                                    Grid.Column="5"
                                    Click="ResetElemClick"
                                    Content="Сброс" />
                            </Grid>
                            <!--  Separator: Elem Selector|Reset  -->
                            <Separator
                                Grid.Row="11"
                                Margin="10,10,10,0"
                                Background="Black">
                                <Separator.RenderTransform>
                                    <ScaleTransform ScaleY="2" />
                                </Separator.RenderTransform>
                            </Separator>
                            <!--  Reset  -->
                            <Button
                                Grid.Row="12"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                Click="ResetPositionClick"
                                Content="Сбросить положение по умолчанию" />
                            <!--  Camera  -->
                            <TextBlock
                                Name="CameraPositionBlock"
                                Grid.Row="13"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center" />
                            <TextBlock
                                Name="CameraDirectionBlock"
                                Grid.Row="14"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center" />
                        </Grid>
                    </TabItem>

                    <!--  Settings tab  -->
                    <TabItem Header="Настройки">
                        <Grid Margin="10,10,10,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <!--  Node size row  -->
                            <Grid Grid.Row="0" Margin="10,10,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    FontSize="14"
                                    Foreground="Black"
                                    Text="Размер узлов (px):  " />
                                <Slider
                                    Name="PointsSizeSlider"
                                    Grid.Column="1"
                                    Maximum="50"
                                    Minimum="1"
                                    ValueChanged="PointsSizeChanged" />
                            </Grid>

                            <!--  Lines size row  -->
                            <Grid Grid.Row="1" Margin="10,10,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    FontSize="14"
                                    Foreground="Black"
                                    Text="Толщина линий (px): " />
                                <Slider
                                    Name="LinesSizeSlider"
                                    Grid.Column="1"
                                    Maximum="15"
                                    Minimum="1"
                                    ValueChanged="LinesSizeChanged" />
                            </Grid>

                            <!--  Color pickers  -->
                            <Grid Grid.Row="2" Margin="10,10,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    FontSize="14"
                                    Foreground="Black"
                                    Text="Цвет узлов: " />
                                <xctk:ColorPicker
                                    Name="PointsColorPicker"
                                    Grid.Column="1"
                                    Width="50"
                                    SelectedColorChanged="PointsColorChanged" />
                                <TextBlock
                                    Grid.Column="2"
                                    Margin="10,0,0,0"
                                    FontSize="14"
                                    Foreground="Black"
                                    Text="Цвет линий: " />
                                <xctk:ColorPicker
                                    Name="LinesColorPicker"
                                    Grid.Column="3"
                                    Width="50"
                                    SelectedColorChanged="LinesColorChanged" />
                            </Grid>

                            <Grid Grid.Row="3" Margin="10,10,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    FontSize="14"
                                    Foreground="Black"
                                    Text="Цвет фона:  " />
                                <xctk:ColorPicker
                                    Name="BgColorPicker"
                                    Grid.Column="1"
                                    Width="50"
                                    SelectedColorChanged="BgColorChanged" />
                            </Grid>

                            <!--  Wirefrrame mode  -->
                            <Grid Grid.Row="4" Margin="10,10,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Foreground="Black"
                                    Text="Каркасный режим: " />
                                <CheckBox
                                    Name="WiremodeCheckBox"
                                    Grid.Column="1"
                                    Checked="WiremodeChecked"
                                    Unchecked="WiremodeUnChecked" />
                                <TextBlock
                                    Grid.Column="2"
                                    Foreground="Black"
                                    Text="Отображать сетку: " />
                                <CheckBox
                                    Name="ShowGridCheckBox"
                                    Grid.Column="3"
                                    Checked="ShowGridChecked"
                                    Unchecked="ShowGridUnChecked" />
                            </Grid>

                            <!--  Separator: Settings|Change SubAreas  -->
                            <Separator
                                Grid.Row="5"
                                Margin="10,10,10,0"
                                Background="Black">
                                <Separator.RenderTransform>
                                    <ScaleTransform ScaleY="2.5" />
                                </Separator.RenderTransform>
                            </Separator>

                            <!--  Change SubAreas  -->
                            <Grid Grid.Row="6" Margin="10,10,10,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackPanel
                                    Grid.Row="0"
                                    Margin="0,0,0,10"
                                    Orientation="Horizontal">
                                    <TextBlock Text="№ подобласти: " />
                                    <ComboBox
                                        Name="SubAreaNumDownMenu"
                                        Margin="0,0,25,0"
                                        SelectionChanged="SubAreaNumChanged" />
                                    <TextBlock Text="Ось: " />
                                    <ComboBox Name="SubAreaAxisDownMenu" Margin="0,0,10,0">
                                        <ComboBoxItem Content="X" />
                                        <ComboBoxItem Content="Y" />
                                        <ComboBoxItem Content="Z" />
                                    </ComboBox>
                                    <Button
                                        Width="25"
                                        Margin="0,0,10,0"
                                        Click="DoubleGridClick"
                                        Content="x2" />
                                    <Button
                                        Width="25"
                                        Click="HalfGridClick"
                                        Content="/2" />
                                </StackPanel>
                                <StackPanel Grid.Row="1" Orientation="Horizontal">
                                    <TextBlock Text="Цвет подобласти: " />
                                    <xctk:ColorPicker
                                        Name="SubAreaColorPicker"
                                        Width="50"
                                        SelectedColorChanged="SubAreaColorChanged" />
                                </StackPanel>
                            </Grid>

                            <!--  Separator: Change SubAreas|Uploading q vector  -->
                            <Separator
                                Grid.Row="7"
                                Margin="10,10,10,0"
                                Background="Black">
                                <Separator.RenderTransform>
                                    <ScaleTransform ScaleY="2.5" />
                                </Separator.RenderTransform>
                            </Separator>

                            <!--  Uploading q vector  -->
                            <Grid Grid.Row="8" Margin="10,10,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Border
                                    Width="150"
                                    Height="20"
                                    Margin="0,0,5,0"
                                    BorderBrush="Black"
                                    BorderThickness="1">
                                    <TextBlock
                                        Name="QFileNameBlock"
                                        Grid.Column="0"
                                        Width="150"
                                        Height="25"
                                        Background="White"
                                        Text="Файл не загружен" />
                                </Border>
                                <Button
                                    Grid.Column="1"
                                    Width="35"
                                    Height="35"
                                    Margin="0,0,5,0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="UploadQFileClick">
                                    <Image Source="Images/upload.png" />
                                </Button>
                                <Button
                                    Grid.Column="2"
                                    Width="40"
                                    Height="40"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="RemoveQFileClick">
                                    <Image Source="Images/cancel.png" />
                                </Button>
                            </Grid>
                            <CheckBox
                                Name="ShowQGradientCheckbox"
                                Grid.Row="9"
                                Margin="10,10,10,0"
                                Checked="ShowQGradientChecked"
                                Content="Визуализировать вектор q"
                                Unchecked="ShowQGradientUnChecked" />
                            <Grid Grid.Row="10" Margin="10,10,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    FontSize="14"
                                    Foreground="Black"
                                    Text="Цвет 1: " />
                                <xctk:ColorPicker
                                    Name="MinColorPicker"
                                    Grid.Column="1"
                                    Width="50"
                                    SelectedColorChanged="MinColorChanged" />
                                <TextBlock
                                    Grid.Column="2"
                                    Margin="10,0,0,0"
                                    FontSize="14"
                                    Foreground="Black"
                                    Text="Цвет 2: " />
                                <xctk:ColorPicker
                                    Name="MaxColorPicker"
                                    Grid.Column="3"
                                    Width="50"
                                    SelectedColorChanged="MaxColorChanged" />
