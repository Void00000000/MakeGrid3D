<Page x:Class="MakeGrid3D.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MakeGrid3D.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Border Width="450" Height="350" BorderThickness="1" BorderBrush="Gray">
            <Image Width="450" Height="350">
                <Image.Source>
                    <BitmapImage DecodePixelWidth="450" DecodePixelHeight="350"  
                    UriSource="../Images/logo2.png" />
                </Image.Source>
            </Image>
        </Border>
        <Button VerticalAlignment="Bottom" Width="100" Content="Открыть файл" Click="OpenFileClick" HorizontalAlignment="Left" Margin="20,0,0,20"/>
        <Button VerticalAlignment="Bottom" Width="100" Content="Далее" Click="NextPageClick" HorizontalAlignment="Right" Margin="0,0,20,20"/>
    </Grid>
</Page>
