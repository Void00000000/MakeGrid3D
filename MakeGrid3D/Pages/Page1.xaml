<Page
    x:Class="MakeGrid3D.Pages.Page1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MakeGrid3D.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Page1"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Border
            Width="450"
            Height="350"
            BorderBrush="Gray"
            BorderThickness="1">
            <Image Width="450" Height="350">
                <Image.Source>
                    <BitmapImage
                        DecodePixelHeight="350"
                        DecodePixelWidth="450"
                        UriSource="../Images/logo2.png" />
                </Image.Source>
            </Image>
        </Border>
        <Button
            Width="100"
            Margin="20,0,0,20"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Click="OpenFileClick"
            Content="Открыть файл" />
        <Button
            Width="100"
            Margin="0,0,20,20"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="NextPageClick"
            Content="Далее" />
    </Grid>
</Page>
